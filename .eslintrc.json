{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base", "prettier", "plugin:mocha/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["prettier", "mocha", "chai-friendly"],
    "rules": {
        "prettier/prettier": ["error"],
        "no-console": [
          "error",
          {
            "allow": ["warn", "error", "debug"]
          }
        ]
    }
}
  